= render 'shared/notice_error'
| Courses
a.rr href=new_course_path
  | Add Course
table.olt
  tbody
    tr
      td
        | ID
      td
        | Name
      td
        | Trainer
      td
        | City
      td
        | Location
      td
        | Price
      td
        | Time
      td
        | Class Photos
      td
    - @courses.each_with_index do |course, i|
      tr
        td
          = i + 1
        td
          = link_to course.name, "#{course_path}?id=#{course.id}", target: '_blank'
        td
          = link_to course.trainer.name, "/team_member_#{course.trainer.url}", target: '_blank'
        td
          = course.city
        td
          = course.location
        td
          = course.discount
        td
          = begin_end_time(course)
        td
          | #{course.class_photos.size} photos
          = link_to 'Add', new_course_class_photo_path(course)
          = link_to '删除照片', "/destroy_all_class_photos_#{course.id}"
        td
          = link_to 'Edit', edit_course_path(course)